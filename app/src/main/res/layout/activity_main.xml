<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="#484848"
    tools:context=".MainActivity">

    <EditText
        android:hint="Add Employee Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentText"
        android:layout_marginTop="50dp"
        android:layout_marginRight="110dp"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addButton"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="255dp"
        />

    <TextView
        android:text="Employees:"
        android:id="@+id/employeeLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="#FF0000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberEmployee"
        android:layout_marginTop="116dp"
        android:layout_marginLeft="110dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:text="Average Length:"
        android:id="@+id/averageLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="#FF0000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/averageNumber"
        android:layout_marginTop="181dp"
        android:layout_marginLeft="150dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:hint="Find Employee"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findEmployee"
        android:layout_marginTop="240dp"
        android:layout_marginRight="110dp"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/findButton"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="255dp"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/switch1"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/findButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
